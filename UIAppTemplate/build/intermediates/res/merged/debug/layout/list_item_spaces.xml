<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res/com.csform.android.uiapptemplate"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@android:color/white"
    android:orientation="vertical" >


    <com.csform.android.uiapptemplate.view.MaterialRippleLayout
        style="@style/RippleStyle"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingTop="20dp"
        android:paddingBottom="20dp"
        android:background="@drawable/border">
        <android.support.v7.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/cv"
            android:background="#fff">
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="8dp"
                android:layout_marginRight="8dp"
                android:layout_marginBottom="1dp"
                android:id="@+id/lvis_spaces"
                android:gravity="center_vertical"
                android:minHeight="?android:attr/listPreferredItemHeight"
                android:orientation="horizontal"
                android:background="#fff">

                <ImageView
                    android:id="@+id/lvis_photo"
                    android:layout_width="80dp"
                    android:layout_height="80dp"
                    android:layout_marginLeft="16dp"
                    android:layout_marginRight="16dp"
                    android:contentDescription="@string/cd_main_image"
                    android:scaleType="centerCrop" />

                <LinearLayout
                    android:orientation="vertical"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content">
                    <com.csform.android.uiapptemplate.font.RobotoTextView
                        android:id="@+id/lvis_name"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginRight="6dp"
                        android:paddingLeft="0dp"
                        android:text="Jane Smith"
                        android:textColor="@color/main_color_grey_700"
                        android:textSize="24sp"
                        app:typeface="robotoRegular"
                        android:fontFamily="@string/typography1" />

                    <com.csform.android.uiapptemplate.font.RobotoTextView
                        android:id="@+id/lvis_view_count"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginRight="6dp"
                        android:paddingLeft="0dp"
                        android:text="X Views"
                        android:textColor="@color/main_color_grey_700"
                        android:textSize="14sp"
                        app:typeface="robotoRegular" />
                </LinearLayout>

            </LinearLayout>
        </android.support.v7.widget.CardView>

    </com.csform.android.uiapptemplate.view.MaterialRippleLayout>


</LinearLayout><!-- From: file:/Users/bhuwan/ReadersDoor/Android/android/oditty/UIAppTemplate/res/layout/list_item_spaces.xml -->