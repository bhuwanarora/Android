<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="com/apk/res/com.csform.android.uiapptemplate"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@android:color/white"
    android:orientation="horizontal" >
    <LinearLayout
        android:id="@+id/lvis_book_item"
        android:background="@drawable/border"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:textAlignment="center"
        android:paddingBottom="10dp"
        android:paddingLeft="10dp"
        android:paddingRight="10dp"
        android:layout_weight="2"
        android:touchscreenBlocksFocus="true">
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:padding="10dp"
            android:orientation="vertical">
            <ImageView
                android:id="@+id/lvis_photo"
                android:layout_width="150dp"
                android:layout_height="220dp"
                android:layout_marginLeft="0dp"
                android:layout_marginRight="0dp"
                android:contentDescription="@string/cd_main_image"
                android:scaleType="centerCrop"
                android:layout_gravity="center_horizontal" />
        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="8dp"
            android:layout_marginRight="8dp"
            android:gravity="center_vertical"
            android:minHeight="?android:attr/listPreferredItemHeight"
            android:orientation="vertical"
            android:paddingTop="0dp"
            android:paddingLeft="0dp">
            <com.csform.android.uiapptemplate.font.RobotoTextView
                android:id="@+id/lvis_rating"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:paddingLeft="0dp"
                android:text="24"
                android:textColor="@color/main_color_grey_500"
                android:textSize="24sp"
                app:typeface="robotoRegular"
                android:textAlignment="center" />
            <com.csform.android.uiapptemplate.font.RobotoTextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:paddingLeft="0dp"
                android:text="Goodness Rating"
                android:id="@+id/lvis_goodness_rating_text"
                android:textColor="@color/main_color_grey_500"
                android:textSize="12sp"
                app:typeface="robotoRegular"
                android:layout_marginBottom="20dp" />
            <com.csform.android.uiapptemplate.font.RobotoTextView
                android:id="@+id/lvis_title"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:paddingLeft="0dp"
                android:text="BOOK TITLE"
                android:textColor="@color/main_color_grey_500"
                android:textSize="17sp"
                app:typeface="robotoRegular"
                android:textStyle="bold" />
            <com.csform.android.uiapptemplate.font.RobotoTextView
                android:id="@+id/lvis_author_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:paddingLeft="0dp"
                android:text="Author Name"
                android:textColor="@color/main_color_grey_500"
                android:textSize="15sp"
                app:typeface="robotoRegular" />
            <com.csform.android.uiapptemplate.font.RobotoTextView
                android:id="@+id/lvis_published_date"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:paddingLeft="0dp"
                android:text="2 January, 1878"
                android:textColor="@color/main_color_grey_500"
                android:textSize="12sp"
                app:typeface="robotoRegular" />
            <com.csform.android.uiapptemplate.font.RobotoTextView
                android:id="@+id/lvis_pages"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:paddingLeft="0dp"
                android:text="200 Pages"
                android:textColor="@color/main_color_grey_500"
                android:textSize="15sp"
                app:typeface="robotoRegular" />
        </LinearLayout>
    </LinearLayout>
</LinearLayout>